# Ubuntu 16.04 installed with the following libraries:
#  - Bazel 4.0.0
#  - Clang 11.1.0
#  - libstdc++8 or greater
#  - openjdk-8

FROM ubuntu:18.04 as base

RUN apt-get update && apt-get install -y apt-transport-https software-properties-common sudo

RUN echo "deb http://apt.llvm.org/bionic/ llvm-toolchain-bionic main" >> /etc/apt/sources.list && \
    echo "deb-src http://apt.llvm.org/bionic/ llvm-toolchain-bionic main" >> /etc/apt/sources.list && \
    echo "deb http://apt.llvm.org/bionic/ llvm-toolchain-bionic-11 main" >> /etc/apt/sources.list && \
    echo "deb [arch=amd64] https://storage.googleapis.com/bazel-apt stable jdk1.8" >> /etc/apt/sources.list.d/bazel.list

RUN sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 15CF4D18AF4F7421
RUN sudo apt-key adv --keyserver keyserver.ubuntu.com --recv-keys 3D5919B448457EE0

RUN sudo add-apt-repository -y ppa:ubuntu-toolchain-r/test
RUN apt-get update
RUN apt-get install -y --allow-unauthenticated --fix-missing bazel clang-11 gcc-8 g++-8 openjdk-8-jdk
RUN rm -rf /var/lib/apt/lists/* 

RUN update-alternatives --install /usr/bin/clang clang /usr/bin/clang-11 11 && \
    update-alternatives --install /usr/bin/clang++ clang++ /usr/bin/clang++-11 11
